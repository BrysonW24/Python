#Creating and using a class
class Puppy():
    def __init__(self, name, favourite_toy):
        self.name = name
        self.favourite_toy = favourite_toy

    def play(self):
        print(self.name + " is playing with the " + self.favourite_toy)

##Working with Python
#Instance of our class
marble = Puppy('Marble', 'teddy bear')
marble.play()

onyx = Puppy('Onyx', 'lizard')
onyx.play()

##Working with Python
#Adding modules to your programs
import random
numbers = [1,2,3,4,5]
random.shuffle(numbers)
print(numbers)

number = random.choice(numbers)
print(number)
